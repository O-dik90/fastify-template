{
  "compilerOptions": {
    /* ---- File Layout ---- */
    "rootDir": "./src",
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },

    /* ---- Module / Target (for Node.js ESM) ---- */
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ESNext",
    "types": ["node"],

    /* ---- Interop ---- */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* ---- Outputs ---- */
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    /* ---- Strictness ---- */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "skipLibCheck": true,
    "allowImportingTsExtensions":true,
    "emitDeclarationOnly": true,

    /* ---- ESM Import Fix ---- */
    "verbatimModuleSyntax": false, // biar TS auto tambahin ".js" di hasil compile

    /* ---- Optional (keep clean) ---- */
    "isolatedModules": true,
    "moduleDetection": "force"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
